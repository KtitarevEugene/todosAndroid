<Alloy>
	<View id="thirdWnd">
		<View id="controls">
			<Button id="idSave" title='Save' onClick="saveRecord" />
			<Button id="idRemove" title='Remove' onClick="removeRecord" />
		</View>
		<ScrollView id="scroller">
			<View id="scrollContent">
		        <TextArea id="descrField" />
		        <View id="content">
			        <View id="subContent">
			        	<Label class="label">Date</Label>
				        <View class="textFieldView">
				        	<TextField id="date" />
			        	</View>
			        	<Label class="label">Type</Label>
				        <View class="textFieldView">
					        <Button id="type" title="Bug" onClick="showTypeOptionDialog" />
			        	</View>
			        	<Label class="label">Status</Label>
				        <View class="textFieldView">
					        <Button id="status" title="New" onClick="showStatusOptionDialog" />
			        	</View>
				    </View>
		    	</View>
		    	<View id="centerAligner">
			    	<View id="blanksContainer">
			    		<ImageView class="firstBlank" id="whiteColor" onClick="setTodoColor" />
			    		<ImageView class="blank" id="yellowColor" onClick="setTodoColor" />
			    		<ImageView class="blank" id="redColor" onClick="setTodoColor" />
			    		<ImageView class="blank" id="blueColor" onClick="setTodoColor" />
			    	</View>
		    	</View>
	    	</View>
    	</ScrollView>
	</View>
</Alloy>